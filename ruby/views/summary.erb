<%= erb :header, :locals => {:page => 'summary'} %>

  <table class=checkboxes">
    <tr>
      <%=
        html = []
        types = $database.unique( 'scan', :type)
        @types_to_list = {}

        none_listed = true
        types.each do |type|
          none_listed = false if cookies.key?( type.to_sym)
        end

        types.each do |type|
          checked = ''
          if (cookies[type.to_sym] == 'Y') || none_listed
            @types_to_list[type] = true
            checked = 'checked'
          end
          html << "<td>#{type}: "
          html << "<input type=\"checkbox\" id=\"#{type}\" value=\"Y\" onclick=\"scan_checkbox('#{type}')\" #{checked}></td>"
        end
        html.join( "\n")
      %>
    </tr>
  </table>

  <table class="summary list">
    <tr><th>Site</th><th>Type</th><th>Unmatched</th><th>Ignored</th><th>Matched</th><th>Bound</th></tr>
    <%=
      html = []

      records = $database.select( 'scan') do |rec|
        @types_to_list[rec[:type]]
      end

      records.sort_by! do |rec|
        [rec[:site].downcase, rec[:type]]
      end

      matched, unmatched, bound, ignored, site, type = 0, 0, 0, 0, '', ''
      records.each do |rec|
        if (rec[:site] != site) || (rec[:type] != type)
          summary_line( site, type, unmatched, ignored, matched, bound, html)
          site  = rec[:site]
          type  = rec[:type]
          matched = unmatched = bound = ignored = 0
        end

        if rec[:bind].size > 0
          if rec[:bind][0][:id] >= 0
            bound += 1
          else
            ignored += 1
          end
        elsif rec[:collate].size > 0
          matched += 1
        else
          unmatched += 1
        end
      end

      summary_line( site, type, unmatched, ignored, matched, bound, html)
      html.join( "\n")
    %>
  </table>

</body>
</html>