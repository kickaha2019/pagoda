<table class="games list">
  <tr><th>Name</th><th>Year</th><th>In group</th><th>Select</th></tr>
  <%=
    html = []

    records = games_records
    current_page = cookies[:games_page] ? cookies[:games_page].to_i : 1
    total_pages  = (records.size + 99) /  100
    current_page = 1 if total_pages < current_page
    selected     = cookies[:selected_game] ? cookies[:selected_game].to_i : -1
    records.sort_by! do |rec|
      rec[:sort_name]
    end

    records[(100*(current_page-1))...(100*current_page)].each do |rec|
      rec[:year] = '' if rec[:year] < 1
      if selected == rec[:id]
        style   = 'style="background: lime"'
        checked = 'checked'
      else
        style = checked = ''
      end
      html << "<tr #{style}>"
      html << [:name, :year, :group_name].collect {|f| "<td>#{rec[f]}</td>"}.join( "\n")
      html << "<td><input type=\"checkbox\" onclick=\"select_checkbox('#{rec[:id]}')\" #{checked}></td>"
      html << '</tr>'
    end

    html.join( "\n")
  %>
</table>
